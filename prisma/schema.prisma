

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String        @unique
  password     String
  gender       String
  imageUrl     String?
  imageAlt     String?
  height       Decimal
  weight       Decimal
  age          Int
  workoutlines Workoutline[]
  logs         Log[]
}

model Workout {
  id           Int           @id @default(autoincrement())
  name         String        @db.VarChar(255)
  description  String
  href         String
  imageUrl     String
  imageAlt     String
  workoutlines Workoutline[]
}

model Exercise {
  id           Int           @id @default(autoincrement())
  name         String        @db.VarChar(255)
  description  String
  href         String
  imageUrl     String
  imageAlt     String
  videoUrl     String
  workoutlines Workoutline[]
}

model Workoutline {
  id         Int      @id @default(autoincrement())
  recSets    Int
  recReps    Int
  recWeights Int
  userId     Int
  workoutId  Int
  exerciseId Int
  logs       Log[]
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
  workout    Workout  @relation(fields: [workoutId], references: [id])

  @@unique([workoutId, exerciseId])
}

model Log {
  id            Int         @id @default(autoincrement())
  recSets       Int
  recReps       Int
  recWeights    Int
  step          Int
  createdAt     DateTime    @default(now())
  userId        Int
  WorkoutlineId Int
  user          User        @relation(fields: [userId], references: [id])
  workoutline   Workoutline @relation(fields: [WorkoutlineId], references: [id])
}
